<div class="container mt-3">
  <div class="col-12">
    <h1>All our Flats (<%= @flats.size %>)</h1>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card-image" style="background-image: url(<%= flat.picture_url %>)"></div>
        <div class="flat-card">
          <div class="flat-card-content">
          <h4><%= flat.name %></h4>
          <p><%= flat.address %></p>
          <i class="fas fa-user-friends"><%= flat.number_of_guests %></i>
          <i class="fas fa-euro-sign"><%= flat.price_per_night %></i>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat) %>
            <%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

